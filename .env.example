# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
DEBUG=False
ALLOWED_HOSTS=api.example.com,localhost
ENVIRONMENT=production

# Database - Supabase PostgreSQL
# Get your connection string from: Supabase Dashboard → Project Settings → Database → Connection string (URI)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.[project-ref]:[YOUR_PASSWORD]@aws-0-[region].pooler.supabase.com:6543/postgres
# Redis & Celery
REDIS_URL=redis://127.0.0.1:6379/1
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Static & Media
STATIC_ROOT=/var/www/static
MEDIA_ROOT=/var/www/media

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@example.com
ADMIN_EMAIL=admin@example.com

# Site URLs
SITE_URL=https://api.example.com
NEXTJS_URL=https://example.com

# Secrets (generate with: openssl rand -hex 32)
REVALIDATE_SECRET=your-revalidate-secret-64-chars
ANALYTICS_SECRET=your-analytics-secret-64-chars

# CORS
CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com

# Throttle Rates
ANON_THROTTLE_RATE=100/hour
USER_THROTTLE_RATE=1000/hour

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
DJANGO_LOG_LEVEL=INFO

# API Contact
CONTACT_EMAIL=api@example.com

# Supabase Storage (for CKEditor uploads)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_API_KEY=your-supabase-anon-key
SUPABASE_BUCKET=your-bucket-name

# CDN Configuration (optional)
CDN_PROVIDER=cloudflare
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token
# OR for BunnyCDN:
# CDN_PROVIDER=bunnycdn
# BUNNYCDN_API_KEY=your-api-key
# BUNNYCDN_PULL_ZONE_ID=your-pull-zone-id
